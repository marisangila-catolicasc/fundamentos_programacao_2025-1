programa {
  funcao inicio() {
    inteiro num1, num2

    escreva("Digite um número inteiro: ")
    leia(num1)
    
    escreva("Digite o outro número inteiro: ")
    leia(num2)

    escreva(" \nSoma: ", num1 + num2)
    escreva(" \nSubtração ", num1 - num2)
    escreva("\nMultiplicação: ", num1 * num2)
    escreva(" \nDivisão:", num1 / num2)
    escreva(" \nPrimeiro número elevado ao segundo número é: ", num1 ^ num2)
    escreva(" \nO resto dos dois números é: ", num1 % num2)
  }
}
