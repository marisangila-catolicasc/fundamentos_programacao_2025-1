programa {
  funcao inicio() {
    inteiro numero_inicial,numero_antecessor, numero_posterior
    escreva("Me informe um número inteiro: ")
    leia(numero_inicial)
    numero_antecessor = numero_inicial - 1
    numero_posterior = numero_inicial + 1
    escreva("O número informado foi: ", numero_inicial,"\n","O número antecessor é: ",numero_antecessor,"\n","O número sucessor é: ",numero_posterior)
    
  }
}
