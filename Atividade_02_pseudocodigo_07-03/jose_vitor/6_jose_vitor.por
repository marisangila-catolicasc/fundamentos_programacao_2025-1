programa {
  funcao inicio() {
    inteiro valor_inicial, antecessor, sucessor
    escreva("Digite um número:\n")
    leia(valor_inicial)
    antecessor = valor_inicial - 1
    sucessor = valor_inicial +1
    escreva("O valor inicial é: "+valor_inicial+"\nO seu antecessor é: "+antecessor+"\nE seu sucessor é: "+sucessor)
  }
}
