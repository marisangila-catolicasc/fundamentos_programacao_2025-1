programa {
  funcao inicio() {

    inteiro idade_do_pet
    real peso_do_pet
    cadeia tipo_do_pet

    escreva("Informe a idade do seu pet: \n")
    leia(idade_do_pet)

    escreva("Informe o peso do seu pet: \n")
    leia(peso_do_pet)

    escreva("Marque a opção de qual tipo é o seu pet, caso for um gato (G) caso for um cachorro (C) \n")
    leia(tipo_do_pet)

    escreva("O seu pet é um: (", tipo_do_pet, ") vida longa ao seu pet! \n")

  }
}
