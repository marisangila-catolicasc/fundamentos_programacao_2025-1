resultado3 = x / y
resultado4 = x * y
  escreva("O resultado da soma é:\n ", resultado1, "!\n")
  escreva("O resultado da subtração é:\n ", resultado2, "!\n")
  escreva("O resultado da divisão é: \n", resultado3, "!\n")
