programa {
  funcao inicio() {
    inteiro idade
    real peso 
    cadeia tipopet

    escreva("Qual a idade do seu pet? \n")
    leia (idade)

    escreva("Qual o peso de seu pet? \n")
    leia (peso)

    escreva("Qual o tipo do seu pet? Escreva c para cachorro ou g para gato!\n")
    leia(tipopet)
     

     escreva("idade: ",idade,"   peso:  " ,peso,"   tipo do pet: " ,tipopet )
  }
}