programa {
    funcao inicio() {

        inteiro idade
        real peso
        caracter tipoPet


        escreva("Digite a idade do seu pet: ")
        leia(idade)

        escreva("Digite o peso do seu pet (em kg): ")
        leia(peso)

        escreva("Digite o tipo do seu pet (cachorro ou gato): ")
        leia(tipoPet)

        escreva("Idade do pet: ", idade, " anos\n")
        escreva("Peso do pet: ", peso, " kg\n")
        escreva("Tipo do pet: ", tipoPet, "\n")
    }
}
